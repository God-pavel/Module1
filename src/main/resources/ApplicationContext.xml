<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="random" class="java.util.Random"/>
    
    <bean id="storage" class="src/storage/Storage.java"
          p:dataFilePath="${storage.dataFilePath}">
    </bean>

    <bean id="eventDAO" class="src/dao/impl/EventDAOImpl.java"
          p:storage-ref="storage"
          p:random-ref="random">
    </bean>
    <bean id="ticketDAO" class="src/dao/impl/TicketDAOImpl.java"
          p:storage-ref="storage"
          p:random-ref="random">
    </bean>
    <bean id="userDAO" class="src/dao/impl/UserDAOImpl.java"
          p:storage-ref="storage"
          p:random-ref="random">
    </bean>

    <bean id="eventService" class="/src/service/impl/EventServiceImpl.java" autowire="byType">
    </bean>
    <bean id="userService" class="src/service/impl/UserServiceImpl.java" autowire="byType">
    </bean>
    <bean id="ticketService" class="src/service/impl/TicketServiceImpl.java" autowire="byType"
          p:eventService-ref="eventService"
          p:userService-ref="userService">
    </bean>

    <bean id="facade" class="src/facade/impl/BookingFacadeImpl.java">
        <constructor-arg index="0" value="eventService"/>
        <constructor-arg index="1" value="ticketService"/>
        <constructor-arg index="2" value="userService"/>
    </bean>
</beans>